<!-- Modal -->
<div
  class="modal fade"
  id="exampleModalLong1"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLongTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-xl" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Provjeri Podatke</h5>
      </div>
      <div class="modal-body">
        <table
          class="table table-striped thead-primary table-bordered"
          id="Tabela"
        >
          <thead>
            <tr>
              <th scope="col">Izaberi</th>
              <th scope="col">Name</th>
              <th scope="col">Tip</th>
              <th scope="col">Cijena</th>
              <th scope="col">Nova cijena</th>
              <th scope="col">Image</th>
            </tr>
          </thead>
          <tbody>
            <% if(returnList !== 0) { 
              let i = 0
             returnList.forEach( (art) => {
            if(art !== null ) { %>
            <tr>
              <td>
                <input type="checkbox" aria-label="checkBox" id="checkbox" />
              </td>
              <td><%= art.title%></td>
              <td><%= art.tip%></td>
              <td><%= art.cijena%></td>
              <td><%= art.novaCijena%></td>
              <td><img src= <%= art.slika%> alt="slika" id="image"></td>
            </tr>

            <% i++ %> <% }})} else { %>
            <h2>Loading...</h2>
            <% } %>
          </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button
          type="button"
          class="btn btn-primary"
          id="Save"
          data-dismiss="modal"
        >
          Save changes
        </button>
      </div>
    </div>
  </div>
</div>
